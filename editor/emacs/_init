#!/usr/bin/env zsh
source ${0:A:h}/../../deploy

# Dependencies

common_deps=(
  the_silver_searcher
  ripgrep
  sqlite
  zstd
  editorconfig
)

brew_deps=(
  pandoc
  markdown
  coreutils
  gnu-tar
  llvm
  cmake
  glslang
  pyenv
  jq
  black
  aspell
  pngpaste # org-download
  trash
  marked
  shellcheck
  graphviz # graph visualizator - org-roam dep
  fd
  libgit2 # improves Emacs' magit speed
)

cask_fonts_deps=(
  font-hack
  font-hack-nerd-font
  font-noto-sans
  font-noto-serif
)

pip_deps=(
  grip
)

# NPM packages:
# - vscode-langservers-extracted for LSP

install() {
  case $(_os) in
    macos)
      brew install ${common_deps[@]} ${brew_deps[@]}
      xcode-select --install
      # Enable Cask of fonts
      brew tap homebrew/cask-fonts
      brew install ${cask_fonts_deps[@]}
      brew tap d12frosted/emacs-plus
      brew install emacs-plus@28 --with-native-comp --with-modern-doom3-icon
      pip3 install ${pip_deps[@]}
      ;;
  esac

  # Clone and setup doomemacs
  _ensure_repo eduarbo/doomemacs $XDG_CONFIG_HOME/emacs master

  $XDG_CONFIG_HOME/emacs/bin/doom install
}

update() {
  doom upgrade
  doom build
}

link() {
  mklink doom $XDG_CONFIG_HOME
}

clean() {
  rm -rfv "$XDG_CONFIG_HOME/doom" "~/.emacs.d"
}

init "$@"
