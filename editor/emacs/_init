#!/usr/bin/env zsh
source ${0:A:h}/../../deploy

# Dependencies

common_deps=(
  the_silver_searcher
  ripgrep
  sqlite
)

brew_deps=(
  pandoc
  markdown
  coreutils
  gnu-tar
  llvm
  cmake
  glslang
  pyenv
  jq
  black
  hunspell
  pngpaste # org-download
)

cask_deps=(
  marked
  font-hack
  font-hack-nerd-font
  font-noto-sans
)

install() {
  case $(_os) in
    macos)
      brew install ${common_deps[@]} ${brew_deps[@]}
      brew cask install ${cask_deps[@]}
      brew install emacs-plus@28 --with-modern-icon-papirus --with-xwidgets
      ;;
  esac
  # TODO allow installation of global node packages
  # npm install -g eslint_d typescript-language-server

  # Clone and setup doom-emacs
  _ensure_repo eduarbo/doom-emacs ~/.emacs.d develop

  ~/.emacs.d/bin/doom -y install
  ~/.emacs.d/bin/doom purge
  ~/.emacs.d/bin/doom env
  ~/.emacs.d/bin/doom sync
}

update() {
  doom update
  doom purge
  doom env
  doom sync
}

link() {
  mklink doom $XDG_CONFIG_HOME
}

clean() {
  rm -rfv "$XDG_CONFIG_HOME/doom" "~/.emacs.d"
}

init "$@"
