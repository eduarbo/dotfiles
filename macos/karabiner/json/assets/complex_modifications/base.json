{
  "title": "Main layer",
  "rules": [
    {
      "description": "Thumb cluster",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar"
            }
          ],
          "description": "left_command to right_shift, send spacebar on tap"
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "description": "right_command to left_shift, send escape on tap"
        },
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "SUPER",
                "value": true
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "SUPER",
                "value": false
              }
            }
          ],
          "description": "from spacebar to layer SUPER"
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_option",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "MEH",
                "value": true
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "MEH",
                "value": false
              }
            }
          ],
          "description": "from left_option to layer MEH"
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "MEH",
                "value": true
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "MEH",
                "value": false
              }
            }
          ],
          "description": "from right_option to layer MEH"
        }
      ]
    }
  ]
}