{
  "title": "Main layer",
  "rules": [
    {
      "description": "Thumb cluster",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar"
          },
          "to": [
            {
              "set_variable": {
                "name": "SUPER",
                "value": true
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "SUPER",
                "value": false
              }
            }
          ],
          "description": ""
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "SHIFT",
                "value": true
              }
            },
            {
              "key_code": "left_shift"
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "SHIFT",
                "value": false
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar"
            }
          ],
          "description": "left_command to left_shift, send spacebar on tap"
        },
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "left_shift"
              ],
              "optional": []
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "SHIFT",
                "value": true
              }
            },
            {
              "set_variable": {
                "name": "SUPER",
                "value": true
              }
            },
            {
              "key_code": "left_shift"
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "SHIFT",
                "value": false
              }
            },
            {
              "set_variable": {
                "name": "SUPER",
                "value": false
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar",
              "modifiers": [
                "right_control",
                "right_command"
              ]
            }
          ],
          "description": "left_shift+spacebar to left_shift, send right_control+right_command+spacebar on tap",
          "conditions": [
            {
              "type": "variable_unless",
              "name": "MEH",
              "value": true
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "SYMBOLS",
                "value": true
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "SYMBOLS",
                "value": false
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "description": "right_command to , send escape on tap"
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_option",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "MEH",
                "value": true
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "MEH",
                "value": false
              }
            }
          ],
          "description": ""
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "MEH",
                "value": true
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "MEH",
                "value": false
              }
            }
          ],
          "description": ""
        }
      ]
    }
  ]
}