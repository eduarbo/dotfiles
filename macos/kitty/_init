#!/usr/bin/env zsh
source ${0:A:h}/../../deploy
KITTY_DIR="$XDG_CONFIG_HOME/kitty"

# only for macOS
[[ $(_os) != macos ]] && exit

brew_deps=(
  font-hack
  kitty
  font-jetbrains-mono
)

install() {
  # Enable Cask of fonts
  brew tap homebrew/cask-fonts

  brew install ${brew_deps[@]}
}

update() {
  link
}

link() {
  find "$KITTY_DIR" -maxdepth 1 -type l -delete
  mklink config "$KITTY_DIR"
}

clean() {
  rm -rfv "$KITTY_DIR"
}

init "$@"
