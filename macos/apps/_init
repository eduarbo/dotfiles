  quicklookase
  slack
  spotify
  suspicious-package
  tor-browser
  transmission
  visual-studio-code
  vlc
  webpquicklook
  wireshark
)

install() {
  case $(_os) in
    macos)
      brew install ${brew_deps[@]}
      brew tap cjbassi/gotop
      brew install gotop
      ;;
  esac
}

