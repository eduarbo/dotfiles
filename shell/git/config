[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
	whitespace = trailing-space
	autocrlf = input
	ignorecase = false
	fsmonitor = true
	untrackedCache = true
[interactive]
	diffFilter = diff-so-fancy --patch
[color]
	ui = auto
[fetch]
	prune = true
[rebase]
	autosquash = true
	autoStash = true
[pull]
	rebase = true
[push]
	default = current
	autoSetupRemote = true
[merge]
	ff = onlt
	log = true
	conflictStyle = diff3
[log]
	date = relative
[diff]
	# Git diff will use (i)ndex, (w)ork tree, (c)ommit and (o)bject
	# instead of a/b/c/d as prefixes for patches
	mnemonicprefix = true
	colorMoved = zebra
[alias]
	# commit
	chunkyadd = add --patch  # stage commits chunk by chunk
	amend = commit --amend
	ammend = commit --amend

	# revert
	unadd = reset HEAD
	undo-commit = reset --soft "HEAD^"

	# reset
	unstage = reset HEAD   # remove files from index (tracking)
	uncommit = reset --soft HEAD^  # go back before last commit, with files in uncommitted state

	# diff
	last = diff HEAD^  # diff last committed change
	wdiff = diff --word-diff=plain

	# log
	changes = log --pretty=format:\"%C(auto)%h %Cgreen%cr %Cblue[%cn] %C(bold white)%s%Creset\" --name-status
	changelog = log --pretty=format:\" * %s\"
	lg = log --color --graph --pretty=format:'%C(auto)%h%d %s %C(8)%cr %C(0)by %C(italic 8)%aN%C(reset)' --abbrev-commit --
	ls = ls-files

	# data analysis
	authors = !git log --format="%aN" | sort -u
	ranked-authors = !git authors | sort | uniq -c | sort -n
	emails = !git log --format="%aE" | sort -u
	email-domains = !git log --format="%aE" | awk -F'@' '{print $2}' | sort -u

	root = rev-parse --show-toplevel
	panic = !tar cvf ../git_panic.tar *
	dt = difftool
	exec = "!exec "
	orphan = checkout --orphan
	squash = rebase -i origin/master
	done = !git checkout master && git branch -D @{-1}
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[commit]
	template = ~/.config/git/message
[rerere]
	enabled = 1
[init]
	defaultBranch = main
[forge]
	remote = upstream
[include]
	# Here goes my personal configuration
	path = ~/.config/git/personal.gitconfig
