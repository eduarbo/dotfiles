#!/usr/bin/env zsh
source ${0:A:h}/../../deploy

link() {
  mklink .bash* ~/
}

install() {
  case $(_os) in
    macos)  brew install bash bash-completion coreutils findutils ;;
    debian) sudo apt update && sudo apt-get install -y bash ;;
  esac

  exec bash
}

# update() { }

clean() {
  rm -fv ~/.bash{rc,_profile}
}

init "$@"
